/* pages/index/index.wxss */
/*页面*/
.list_page{
  width: 750rpx;
  height: 100%;
  background-color: #aaa;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/*头部轮播图*/
.head_swiper{
  width: 98%;
  height: 340rpx;
}
.head_swiper_item{
  width: 100%;
  height: 340rpx;
  background-color: rgb(246, 247, 246);
}
.swiper_item_pic{
  width: 100%;
  height: 340rpx;
}
/* 主体 */
.body_box_top{
  margin-top: 13px;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.body_box_top text{
  width: 99%;
  font-size: 18px;
  height: 40px;
  margin-left: 15px;
  display: flex;
  align-items: center;
}
.body_box_top button{
  font-size: 17px;
  font-weight: 100;
  height: 40px;
  display: flex;
  float: right;
  justify-content: right;
  color:darkgrey;
}

.body_box_bom {
  margin-top: 8px;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.body_box_bom_item {
  width: 48%;
  text-align: center;
}
.body_box_bom_item image {
  width: 100%;
  height: 220rpx;
}
.body_box_bom_item text {
  margin-top: 10px;
  font-size: 14px;
  color: #333;
  /* 只显示一行 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.top{
  height: 20px;
}